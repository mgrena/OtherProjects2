@rendermode InteractiveServer

<DxTextBox name="@Name" Password="Password" CssClass="@CssClass" @bind-Text="Value" Enabled="@Enabled" />

@code {
    [Parameter] public required string Name { get; set; }
    [Parameter] public required string Value { get; set; }
    [Parameter] public required bool Password { get; set; }
    [Parameter] public required string CssClass { get; set; }
    [Parameter] public bool Enabled { get; set; } = true;
}