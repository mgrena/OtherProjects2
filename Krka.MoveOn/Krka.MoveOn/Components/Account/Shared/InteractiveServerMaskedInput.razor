@rendermode InteractiveServer

<DxMaskedInput name="@Name" @rendermode="InteractiveServer" CssClass="@CssClass" @bind-Value="Value" Mask="@Mask" />

@code {
    [Parameter] public required string Name { get; set; }
    [Parameter] public required string Mask { get; set; }
    [Parameter] public required string Value { get; set; }
    [Parameter] public required string CssClass { get; set; }
    [Parameter] public bool Password { get; set; }
}